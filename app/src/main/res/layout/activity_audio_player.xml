<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_audio_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_cancion_big"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_text_titulo"
        style="@style/titulos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_cancion_big"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_text_genero"
        style="@style/txt14spgris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_text_titulo"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_text_fecha"
        style="@style/txt14spgris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text_genero"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/play_song"
        android:layout_below="@+id/tv_text_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@color/blanco"
        android:src="@drawable/playaudio"
        />

</RelativeLayout>
